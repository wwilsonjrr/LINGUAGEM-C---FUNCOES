/*
51. Faça uma função que receba uma matriz de 3 x 3 elementos.
    Calcule e retorne a soma dos elementos que estão na diagonal secundária.
*/

#include <stdio.h>   // Biblioteca padrão de entrada e saída
#include <stdlib.h>

// -----------------------------------------------------------------------------
// Função que calcula a soma dos elementos da diagonal secundária
// -----------------------------------------------------------------------------
int somaDiagonalSecundaria(int matriz[3][3])
{
    int soma = 0;                            // Variável acumuladora da soma

    // Percorre todas as linhas da matriz
    for (int i = 0; i < 3; i++)
    {
        // A coluna correspondente da diagonal secundária é (2 - i)
        soma += matriz[i][2 - i];            // Soma o elemento da posição [i][2 - i]
    }

    return soma;                             // Retorna a soma total
}

// -----------------------------------------------------------------------------
// Função principal (main)
// -----------------------------------------------------------------------------
int main()
{
    int MATRIZ[3][3];                        // Declara uma matriz 3x3
    int i, j;                                // Variáveis de controle dos laços

    // Solicita ao usuário os valores da matriz
    printf("Digite os elementos da matriz 3x3:\n");

    // Leitura dos elementos da matriz
    for (i = 0; i < 3; i++)                  // Percorre as linhas
    {
        for (j = 0; j < 3; j++)              // Percorre as colunas
        {
            printf("matriz[%d][%d] = ", i, j); // Indica a posição sendo lida
            scanf("%d", &MATRIZ[i][j]);        // Lê o valor e armazena na posição [i][j]
        }
    }

    // Chama a função que calcula a soma da diagonal secundária
    int resultado = somaDiagonalSecundaria(MATRIZ);

    // Exibe o resultado final
    printf("\nA soma dos elementos da diagonal secundaria eh: %d\n", resultado);

    system("pause");
    return 0;                                // Encerra o programa corretamente
}
