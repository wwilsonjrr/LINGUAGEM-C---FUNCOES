/*
50. Faça uma função que receba uma matriz de 3 x 3 elementos.
    Calcule e retorne a soma dos elementos que estão na diagonal principal.
*/

#include <stdio.h>   // Biblioteca padrão para entrada e saída de dados (printf, scanf)
#include <stdlib.h>

// -----------------------------------------------------------------------------
// Função que calcula a soma dos elementos da diagonal principal
// -----------------------------------------------------------------------------
int somaDiagonalPrincipal(int matriz[3][3])
{
    int soma = 0;                            // Variável acumuladora da soma

    // Laço que percorre as linhas e colunas simultaneamente
    for (int i = 0; i < 3; i++)
    {
        // Em uma matriz 3x3, os elementos da diagonal são [i][i]
        soma += matriz[i][i];                // Soma o elemento da posição [i][i]
    }

    return soma;                             // Retorna a soma total
}

// -----------------------------------------------------------------------------
// Função principal (main) — ponto de entrada do programa
// -----------------------------------------------------------------------------
int main()
{
    int MATRIZ[3][3];                        // Declara uma matriz 3x3 de inteiros
    int i, j;                                // Variáveis auxiliares para percorrer a matriz

    // Solicita ao usuário que digite os valores da matriz
    printf("Digite os elementos da matriz 3x3:\n");

    // Leitura dos elementos da matriz
    for (i = 0; i < 3; i++)                  // Percorre as linhas
    {
        for (j = 0; j < 3; j++)              // Percorre as colunas
        {
            printf("matriz[%d][%d] = ", i, j); // Mostra a posição que está sendo lida
            scanf("%d", &MATRIZ[i][j]);        // Armazena o valor digitado pelo usuário
        }
    }

    // Chama a função que calcula a soma da diagonal principal
    int resultado = somaDiagonalPrincipal(MATRIZ);

    // Exibe o resultado final
    printf("\nA soma dos elementos da diagonal principal eh: %d\n", resultado);

    system("pause");
    return 0;                                // Finaliza o programa com sucesso
}
