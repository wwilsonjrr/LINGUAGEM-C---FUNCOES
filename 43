/*
43. Faça uma função que receba um vetor de inteiros e o
    preencha com números aleatórios sem repetição.
*/

#include <stdio.h>   // Biblioteca padrão de entrada e saída (printf, scanf)
#include <stdlib.h>  // Biblioteca necessária para rand(), srand()
#include <time.h>    // Biblioteca necessária para usar time() e gerar números aleatórios diferentes a cada execução

// ------------------------------------------------------------
// Função que preenche um vetor com números aleatórios sem repetição
// ------------------------------------------------------------
void preencherSemRepeticao(int vetor[], int tamanho)
{
    int i, j, numero, repetido;  // variáveis auxiliares

    srand(time(NULL));   // Inicializa o gerador de números aleatórios

    // Define a posição do vetor que está sendo preenchida
    for (i = 0; i < tamanho; i++)
    {
        repetido = 1;    // Força a entrada no while  // inicializa como encontrado

        while (repetido == 1)
        {
            numero = rand() % (tamanho * 2); // Gera número aleatório
            repetido = 0;                    // Assume que não é repetido

            // Verifica se o número já apareceu nas posições anteriores
            for (j = 0; j < i; j++)
            {
                if (vetor[j] == numero)
                {
                    repetido = 1;            // Encontrou repetição
                    break;
                }
            }
        }

        vetor[i] = numero;                   // Guarda número válido
    }
}

// ------------------------------------------------------------
// Função principal — ponto de entrada do programa
// ------------------------------------------------------------
int main()
{
    int n;                                   // Variável que guardará o tamanho do vetor

    // Solicita o tamanho do vetor
    printf("Digite o tamanho do vetor: ");
    scanf("%d", &n);                         // Lê o tamanho informado pelo usuário

    int vetor[n];                            // Declara um vetor de inteiros com n posições

    // Chama a função para preencher o vetor com números aleatórios únicos
    preencherSemRepeticao(vetor, n);

    // Exibe os números gerados
    printf("\nVetor preenchido com numeros aleatorios sem repeticao:\n");
    for (int i = 0; i < n; i++)              // Percorre o vetor
    {
        printf("%d ", vetor[i]);             // Imprime cada elemento separado por espaço
    }

    printf("\n");                            // Quebra de linha final

    system("pause");
    return 0;                                // Indica que o programa terminou com sucesso
}
