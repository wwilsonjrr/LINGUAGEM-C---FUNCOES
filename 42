/*
42. Faça uma função que receba um vetor de reais e retorne a média dele.
*/

#include <stdio.h>   // Biblioteca padrão de entrada e saída (printf, scanf)
#include <stdlib.h>

// ------------------------------------------------------------
// Função que calcula e retorna a média dos valores de um vetor real
// ------------------------------------------------------------
float mediaVetor(float vetor[], int tamanho)  // Recebe o vetor e seu tamanho como parâmetros
{
    float soma = 0;                          // Variável para acumular a soma dos elementos

    // Percorre o vetor somando todos os elementos
    for (int i = 0; i < tamanho; i++)        // Loop de 0 até tamanho - 1
    {
        soma += vetor[i];                    // Adiciona o valor do elemento atual à soma total
    }

    float media = soma / tamanho;            // Calcula a média dividindo a soma pelo número de elementos
    return media;                            // Retorna o valor da média calculada
}

// ------------------------------------------------------------
// Função principal — ponto de entrada do programa
// ------------------------------------------------------------
int main()
{
    int n;                                   // Variável para armazenar o tamanho do vetor

    // Solicita ao usuário o tamanho do vetor
    printf("Digite o tamanho do vetor: ");
    scanf("%d", &n);                         // Lê o valor digitado e guarda em n

    float vetor[n];                          // Declara um vetor de números reais com tamanho variável

    // Leitura dos elementos do vetor
    printf("Digite %d numeros reais:\n", n);
    for (int i = 0; i < n; i++)              // Loop para preencher o vetor
    {
        printf("Elemento [%d]: ", i);        // Mostra o índice do elemento
        scanf("%f", &vetor[i]);              // Lê o valor e armazena no vetor
    }

    // Chama a função que calcula a média
    float resultado = mediaVetor(vetor, n);

    // Exibe o resultado da média
    printf("\nA media dos valores do vetor eh: %.2f\n", resultado);

    system("pause");
    return 0;                                // Finaliza o programa com sucesso
}
